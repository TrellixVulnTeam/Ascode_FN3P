<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <header id="header" class="fixed-top header-inner-pages">
      <%- include('../partials/nav') %>
    </header>

    <main id="main">
      <!-- ======= Breadcrumbs ======= -->
      <section class="breadcrumbs">
        <div class="container">
          <h3 class="mb-3">Sign Up</h3>
          
        </div>
      </section><!-- End Breadcrumbs -->

      <section class="inner-page">
        <div class="container mb-3">

          <form action="/users" method="post">
    
            <div class="form-group row">
              <div class="col-sm-1 col-form-label"><i class="fas fa-user-alt" style='font-size:23px;color:gray'></i>*</div>
              <div class="col-sm-6">
                <input placeholder="User ID" type="text" id="username" name="username" value="<%= user.username %>" class="form-control <%= (errors.username)?'is-invalid':'' %>">
                <% if(errors.username){ %>
                  <span class="invalid-feedback"><%= errors.username.message %></span>
                <% } %>
              </div>
            </div>
            <br>
            <div class="form-group row">
              <div class="col-sm-1 col-form-label"><i class="fas fa-edit" style='font-size:23px;color:gray'></i>*</div>
              <div class="col-sm-6">
                <input placeholder="Name" type="text" id="name" name="name" value="<%= user.name %>" class="form-control <%= (errors.name)?'is-invalid':'' %>">
                <% if(errors.name){ %>
                  <span class="invalid-feedback"><%= errors.name.message %></span>
                <% } %>
              </div>
            </div>
            <br>
            
            <div class="form-group row">
              <div class="col-sm-1 col-form-label"><i class="fas fa-edit" style='font-size:23px;color:gray'></i></div>
              <div class="col-sm-6">
                <input placeholder="Email" type="text" id="email" name="email" value="<%= user.email %>" class="form-control <%= (errors.email)?'is-invalid':'' %>">
                <% if(errors.email){ %>
                  <span class="invalid-feedback"><%= errors.email.message %></span>
                <% } %>
              </div>
            </div>
            <br>
            
            <div class="form-group row">
              <div class="col-sm-1 col-form-label"><i class="fas fa-lock" style='font-size:23px;color:gray'></i>*</div>
              <div class="col-sm-6">
                <input placeholder="Password" type="password" id="password" name="password" value="" class="form-control <%= (errors.password)?'is-invalid':'' %>">
                <% if(errors.password){ %>
                  <span class="invalid-feedback"><%= errors.password.message %></span>
                <% } %>
              </div>
            </div>
            <br>
            <div class="form-group row">
              <div class="col-sm-1 col-form-label"><i class="fas fa-lock" style='font-size:23px;color:gray'></i>*</div>
              <div class="col-sm-6 col-sm-offset-3">
                <input placeholder="Password Confirmation" type="password" id="passwordConfirmation" name="passwordConfirmation" value="" class="form-control <%= (errors.passwordConfirmation)?'is-invalid':'' %>">
                <% if(errors.passwordConfirmation){ %>
                  <span class="invalid-feedback"><%= errors.passwordConfirmation.message %></span>
                <% } %>
              </div>
            </div>
            <p>
              <br>
              <small>*Required</small>
            </p>
    
            <% if(errors.unhandled){ %>
              <div class="alert alert-danger">
                <%= errors.unhandled %>
              </div>
            <% } %>
    
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            
          </form>
    
        </div>

      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
