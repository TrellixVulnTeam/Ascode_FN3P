<!DOCTYPE html>
<html lang="ko">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <header id="header" class="fixed-top header-inner-pages">
    <%- include('../partials/nav') %>
  </header>
  

  <main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="mb-3">Login</h3>
        </div>
      </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
      <!-- ================================================================================ -->
      <form class="user-form" action="/login" method="post">
        <div class="container">
          <div id="login" class="row col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="col-lg-5 col-md-6 col-sm-12 col-12 login-form">
              <h4>Welcome</h4>

              <!-- user ID -->
              <div class="form-group">
                <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                </svg>
                <input type="text" id="username" name="username" placeholder="Username" value="<%= username %>" class="form-control form-control-lg <%= (errors.username)?'is-invalid':'' %>">
                <% if(errors.username){ %>
                  <span class="invalid-feedback"><%= errors.username %></span>
                <% } %>
              </div><!-- user ID End -->
              <!-- user PW -->
              <div class="form-group">
                <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-lock-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M2.5 9a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-7a2 2 0 0 1-2-2V9z"/>
                  <path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z"/>
                </svg>
                <input type="password" id="password" name="password" value="" placeholder="Password" class="form-control form-control-lg <%= (errors.password)?'is-invalid':'' %>">
                <% if(errors.password){ %>
                  <span class="invalid-feedback"><%= errors.password %></span>
                <% } %>
              </div><!-- user PW End -->

              <% if(errors.login){ %>
                <div class="invalid-feedback d-block"><%= errors.login %></div>
              <% } %>
      
              <div class="mt-3">
                <input class="btn btn-primary" type="submit" value="Log in">
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>

  </main><!-- End #main -->

  <%- include('../partials/footer') %>
</body>

</html>